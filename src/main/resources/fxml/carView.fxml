<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane  maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bee.fxgallery.ui.controller.FXMLGalleryController">         
    <top>
        <VBox fx:id="vBox" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="menuClose" mnemonicParsing="false" text="Close">
                                    <graphic>
                                <FontAwesomeIconView glyphName="CLOSE" glyphSize="16"/>
                            </graphic>    
                                </MenuItem>
                            </items>
                        </Menu>          
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem fx:id="menuAbout" mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar prefHeight="40.0" prefWidth="200.0" >
                    <items>
                        <Button fx:id="btnAddImage" mnemonicParsing="false" text=" Add Image">                            
                            <!--<FontAwesomeIcon  iconName="CIRCLE" size="24pt" />-->             
                            <graphic>
                                <FontAwesomeIconView glyphName="PLUS" glyphSize="24"/>
                            </graphic>            
                        </Button>                        
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>        
        <ScrollPane  BorderPane.alignment="CENTER" fx:id="imgScrollPane">
            <TilePane fx:id="imagesPane" prefHeight="200.0" prefWidth="200.0" >
            </TilePane>
        </ScrollPane>
    </center>
</BorderPane>
